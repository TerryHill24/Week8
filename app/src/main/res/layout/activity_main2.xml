<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9B5DF"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="148dp"
        android:layout_height="52dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="519dp"
        android:text="BACK"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnpg3"
        android:layout_width="140dp"
        android:layout_height="53dp"
        android:layout_marginStart="229dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="518dp"
        android:text="Page 3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtShow2"
        android:layout_width="324dp"
        android:layout_height="41dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="324dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSend2"
        android:layout_width="321dp"
        android:layout_height="59dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="413dp"
        android:ems="10"
        android:hint="Enter String"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="404dp"
        android:layout_height="96dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="497dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>